<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp">

    <Button
        android:id="@+id/button_info"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Info"
        android:textColor="#0099CC" />

    <Button
        android:id="@+id/button_add"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_info"
        android:layout_marginTop="3dp"
        android:background="#FFFFFF"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="Add to cart"
        android:textColor="#0099CC" />

    <TextView
        android:id="@+id/textView_itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_itemType"
        android:layout_below="@+id/textView_itemType"
        android:text="100$"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView_itemType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_add"
        android:layout_alignBottom="@+id/button_add"
        android:layout_alignLeft="@+id/textView_itemTitle"
        android:text="Location" />

    <ImageView
        android:id="@+id/row_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/textView_itemPrice"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView_itemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_info"
        android:layout_alignBottom="@+id/button_info"
        android:layout_centerHorizontal="true"
        android:text="Item Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>